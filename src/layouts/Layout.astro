---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Hire Horn Players Home Page" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/trumpet_favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css?family=Anton"
      rel="stylesheet"
    />
    <link href="https://fonts.cdnfonts.com/css/acumin-pro" rel="stylesheet" />
    <link
      href="https://www.nerdfonts.com/assets/css/webfont.css"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <script src="/src/app.ts"></script>
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    background: #191b1d;
    font-size: 22px;
  }
  body {
    color: #ff6123;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  ::selection {
    background: #ff6123;
    color: white;
  }
  input:focus,
  textarea:focus {
    outline: none;
  }
  input:hover,
  select:hover,
  textarea:hover {
    background-color: #a0a1a2;
    transition: background-color 0.2s ease;
    border: 1px;
    border-color: black;
  }
  input,
  select {
    background: #e5e7eb;
    height: 1.5rem;
    padding-left: 0.5rem;
    height: 2rem;
    color: black;
  }
  textarea {
    background: #e5e7eb;
    padding: 0.5rem;
  }
</style>
