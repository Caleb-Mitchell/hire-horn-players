---
import CircleButton from "../components/CircleButton.astro";

interface Props {
  text: string;
}

const { text } = Astro.props;
---

<form
  class="mt-2 flex flex-col gap-3 px-4 font-acumin text-xs text-white"
  id="inquire"
  action="/lists"
  method="post"
>
  <h2
    class="slide_in mt-8 font-anton text-4xl italic text-[#ff6123] motion-reduce:animate-none"
  >
    {text}
  </h2>

  <p class="-mb-2">
    Name <span class="text-gray-400">(required)</span>
  </p>

  <div class="flex justify-between">
    <label class="flex w-[48.5%] flex-col">
      First Name
      <input type="text" name="first_name" />
    </label>
    <label class="flex w-[48.5%] flex-col">
      Last Name
      <input type="text" name="last_name" />
    </label>
  </div>

  <label class="flex flex-col">
    Phone
    <input type="text" name="phone_number" />
  </label>

  <label class="flex flex-col">
    <div>
      Email <span class="text-gray-400">(required)</span>
    </div>
    <input type="text" name="email" />
  </label>

  <label class="flex flex-col">
    <div>
      Location
      <p class="text-[12px] text-gray-400">
        CURRENTLY ONLY SERVICING THE CHICAGOLAND AREA
      </p>
    </div>
    <select class="pl-1 text-black" name="location">
      <option value="chicago">Chicago</option>
      <option value="other">Other</option>
    </select>
  </label>

  <label class="flex flex-col">
    <div>
      Event Type
      <p class="text-[12px] text-gray-400">
        e.g., wedding, corporate event, party, recording session
      </p>
    </div>
    <select class="pl-1 text-black" name="location">
      <option value="chicago">Chicago</option>
      <option value="other">Other</option>
    </select>
  </label>

  <label class="flex flex-col">
    Date of Event
    <input class="w-2/5 pl-1 text-black" type="date" name="date" />
  </label>

  <label class="flex flex-col">
    Message
    <p class="text-[12px] text-gray-400">Any additional info?</p>
    <textarea rows="4" class="text-black" name=""></textarea>
  </label>

  <label class="flex flex-col">
    How did you hear about us?
    <textarea rows="4" class="text-black" name=""></textarea>
  </label>

  <label class="flex flex-col">
    Budget
    <p class="text-[12px] text-gray-400">
      We're happy to quote you if you don't have a number in mind!
    </p>
    <textarea rows="4" class="text-black" name=""></textarea>
  </label>

  <CircleButton text="Submit" />
</form>
